<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="196dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/control"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_default_radius"
                android:layout_marginTop="60dp"
                android:hint="Ingresa el correo"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/orange"
                app:endIconMode="clear_text"
                app:helperText="Correo"
                app:helperTextEnabled="true"
                android:layout_marginBottom="30dp"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/LOGetcorreo"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_default_radius"
                android:layout_marginTop="60dp"
                android:hint="Ingresa la contraseña"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/orange"
                app:endIconMode="clear_text"
                app:helperText="Contraseña"
                app:helperTextEnabled="true"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/LOGetpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:id="@+id/LOGbtnIniciar"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange"/>
    <Button
        android:id="@+id/LOGbtnSalir"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange"/>

</LinearLayout>
            <Button
                android:id="@+id/LOGbtncrear"
                android:layout_width="145dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/registrarse"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>